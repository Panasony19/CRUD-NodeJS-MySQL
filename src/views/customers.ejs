<%- include('partials/_header'); %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td>NÂ°</td>
                        <td>Name</td>
                        <td>Address</td>
                        <td>Phono</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%- (i + 1) %></td>
                                <td><%- data[i].name %></td>
                                <td><%- data[i].address %></td>
                                <td><%- data[i].phono %></td>
                                <td>
                                    <a href="/delete/<%- data[i].id %>" class="btn btn-danger">Delete</a>
                                    <a href="/update/<%- data[i].id %>" class="btn btn-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div classs="form-group">
                            <input type="text" name="name" placeholder="Name"
                                    class="form-control">
                        </div>
                        <div classs="form-group" style="margin-top: 15px;">
                            <input type="text" name="address" placeholder="Address"
                                    class="form-control">
                        </div>
                        <div classs="form-group" style="margin-top: 15px;">
                            <input type="text" name="phono" placeholder="Phono"
                                    class="form-control">
                        </div>
                        <button class="btn btn-primary mt-3">
                            Save Customer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); %>